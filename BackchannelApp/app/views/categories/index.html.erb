<h1>Listing categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', category if is_admin? %></td>
        <td><%= link_to 'Edit', edit_user_path(category) if is_admin?%></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }  if is_admin?%></td>
      </tr>
  <% end %>
</table>
<br />

<%= link_to 'New Category', new_category_path if is_admin? %>