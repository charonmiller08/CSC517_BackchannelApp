<h1>Listing categories</h1>
<p id="notice"><%= flash[:notice] %></p>
<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @categories.each do |category| %>
      <% if category.name != "Deleted" %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', category if is_admin? %></td>
        <td><%= link_to 'Edit', edit_category_path(category) if is_admin?%></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }  if is_admin?%></td>
      </tr>
      <% end %>
  <% end %>
</table>
<br />

<%= link_to 'New Category', new_category_path if is_admin? %>